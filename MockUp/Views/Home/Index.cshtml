@{
    ViewData["Title"] = "Home Page";
}

<div class="container" style="padding-left: 0px;">
    <div class="col-md-12 overskrift">
        <h1 style="text-align: center;">TITS - Time Information Tracking System</h1>
        <div class="col-md-3" style="padding-left: 0 !important;">
            <div class="col-md-12" style="margin-top:50px;">
                <h4>Teammates</h4>
                <p>
                    <select class="teammates" style="width:202px">
                        <optgroup label="Favoritter">
                            <option value="R">Rasmus </option>
                            <option value="C">Christoffer</option>
                            <option value="k">Karsten</option>
                            <option value="M">Mads</option>
                            <option value="S">Søren</option>
                        </optgroup>
                        <optgroup label="Praktikanter">
                            <option value="C">Børge</option>
                            <option value="M">Bob</option>
                            <option value="S">alice</option>
                        </optgroup>
                    </select>
                </p>
            </div>
            <div class="col-md-12" style="margin-top:20px;">

                <button type="button" class="btn btn-info knap" data-toggle="modal" data-target="#myModal1">Create new time registry</button>
            </div>

        </div>
        <div class="col-md-9">

            <div id='calendar'></div>

            <div class="col-md-6">
                <button type="button" class="btn btn-info sendknap">Save</button>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-success sendknap">Submit for Approval</button>
            </div>
        </div>
    </div>
  </div>

<div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">Time registry</h4>
            </div>
            <div class="col-md-12 modal-body">
                <div class="col-md-12">
                    <div class="col-md-6"style=" padding-left: 0px">
                        <h4>Date</h4>
                        <input type="date" style="border-radius:5px; width:250px;">
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-6" style="padding: 0px;">
                            <h4>Time start</h4>
                            <input type="time" class="form-control" placeholder=" fx. 4.5t" style="width:100px;">
                        </div>
                        <div class="col-md-6">
                            <h4>Time end</h4>
                            <input type="time" class="form-control" placeholder=" fx. 4.5t" style="width:100px;">
                        </div>
                    </div>
          
                </div>
                    <div class="col-md-12">
                        <div class="col-md-6" style="padding-left:0px;">
                            <h4>Client/Project</h4>
                            <select class="teammates" style="width:250px">
                                <optgroup label="Favoritter">
                                    <option value="R">Development </option>
                                    <option value="C">BackEnd</option>
                                    <option value="C">SQL server</option>
                                </optgroup>
                                <optgroup label="Andet">
                                    <option value="C">Business</option>
                                    <option value="M">Meeting</option>
                                    <option value="S">Other</option>
                                </optgroup>
                            </select>
                        </div>

                        <div class="col-md-6" >
                            <h4>Asignment</h4>
                            <select class="teammates" style="width:250px">
                                <optgroup label="Seneste">
                                    <option value="R">Development </option>
                                    <option value="C">BackEnd</option>
                                    <option value="C">SQL server</option>
                                </optgroup>
                                <optgroup label="Andet">
                                    <option value="C">Business</option>
                                    <option value="M">Meeting</option>
                                    <option value="S">Other</option>
                                </optgroup>
                            </select>
                            
                        </div>
                       
                    </div>

             <div class="col-md-12">
                 <div class="col-md-6" style="padding-left:0px;">
                     <h4>Label</h4>
                     <select class="teammates" multiple="multiple" style="width:250px">
                         <optgroup label="Seneste">
                             <option value="R">#Label-A </option>
                             <option value="C">#Label-B</option>
                             <option value="C">#Label-C</option>
                         </optgroup>
                         <optgroup label="Andre">
                             <option value="C">#Label-D</option>
                             <option value="M">#Label-E</option>
                             <option value="S">#Label-F</option>
                         </optgroup>
                     </select>
                 </div>
                 <div class="col-md-6" >
                     <h4>TrackingID</h4>
                     <textarea type="text" style="width:250px; border-radius:5px; height:32px;" rows="1" placeholder="Write TrackingID..."></textarea>
                 </div>

             </div>
              
                
                
             <div class="col-md-12">
                 <div class="col-md-6" style="padding-left:0;">
                     <h4>Comment Eksternt</h4>
                     <textarea class="textbox" rows="4" style="border-radius:5px;" placeholder="Write comment here"></textarea>
                 </div>
                 
                 <div class="col-md-6">
                     <h4>Comment Internt</h4>
                     <textarea class="textbox" rows="4" style="border-radius:5px;" placeholder="Write comment here"></textarea>
                 </div>
                 
             </div>

            </div>
            <div class="modal-footer" style=" ">
                <button type="button" class="btn btn-success" data-dismiss="modal">Submit</button>

                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>







